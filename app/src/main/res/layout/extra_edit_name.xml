<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <EditText
        android:id="@+id/txtEditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="New name..."
        android:maxHeight="150dp"
        android:padding="8dp"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />


    <Button
        android:id="@+id/btnEditNameCancel"
        style="@style/Skip.Button.style"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/txtEditName"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/btnEditNameOk"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="CANCEL" />


    <Button
        android:id="@+id/btnEditNameOk"
        style="@style/Skip.Button.style"
        android:layout_marginTop="8dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEditName"
        android:layout_alignRight="@+id/txtEditName"
        android:text="OK" />

</RelativeLayout>