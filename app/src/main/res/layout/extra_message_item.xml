<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginLeft="@dimen/default_gap"
    android:layout_marginRight="@dimen/default_gap"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMessageSender"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="@dimen/default_gap"
            android:src="@drawable/propic"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/lblMessageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgMessageSender"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_toRightOf="@+id/imgMessageSender"
            android:text="Sony Raj"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblMessageSender"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_toRightOf="@+id/imgMessageSender"
            android:text="A message with a lot of content in it. "
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:text="Yesterday"
            android:textColor="@color/colorPrimaryText" />

    </RelativeLayout>

</android.support.v7.widget.CardView>