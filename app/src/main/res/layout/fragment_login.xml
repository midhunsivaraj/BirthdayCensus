<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".activity.ActivityLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".65"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/imgForward"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/btnSignUp"
            android:background="@null"
            android:src="@drawable/ic_arrow_right" />

        <Button
            android:id="@+id/btnSignUp"
            style="@style/SignUp.Button.Style"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imgForward"
            android:text="Sign Up" />


        <ImageButton
            android:id="@+id/btnFacebookLogin"
            style="@style/login.Image.Button.Style"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/btnTwitterLogin"
            android:background="@drawable/white_button"
            android:src="@drawable/ic_facebook"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/btnTwitterLogin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            style="@style/login.Image.Button.Style"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_button"
            android:src="@drawable/ic_twitter"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lblLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgForward"
            android:layout_marginTop="60dp"
            android:text="LOGIN"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/txtPassword"
            android:background="@null"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/btnCountry"
            android:background="@null"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical"
            android:minHeight="35dp"
            android:text="FORGOT?"
            android:textColor="@color/red_button_text_color"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/btnOk"
            style="@style/Ok.Button.style"
            android:text="OK" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSkip"
            style="@style/Skip.Button.style"
            android:text="Skip" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Â© MateFlick all right reserved"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="any kind of reproduction will be subjected to legal action under the copyright act"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

</LinearLayout>
