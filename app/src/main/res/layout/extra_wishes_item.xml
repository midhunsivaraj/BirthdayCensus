<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_gap"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp">



    <RelativeLayout
        android:id="@+id/videoHolder"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/default_gap"
        android:layout_height="285dp">

        <ImageView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:src="@drawable/rado"
            android:layout_height="205dp"/>



        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/ic_arrow_right_button"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLiveStreamUploader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/propic"
            android:layout_below="@+id/video"
            android:layout_margin="@dimen/default_gap"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_below="@+id/video"
            android:layout_toRightOf="@+id/imgLiveStreamUploader">

            <TextView
                android:id="@+id/lblLiveStreamFileName"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Rado"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lblLiveStreamUploader"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:text=" by Me"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>