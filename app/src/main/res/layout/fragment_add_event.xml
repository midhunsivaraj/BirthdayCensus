<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgTabSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="-150dp"
        android:scaleType="fitStart"
        android:src="@drawable/testred" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageButton
            android:id="@+id/imgToggleNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:background="@drawable/transparent"
            android:src="@drawable/ic_arrow_left" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ADD EVENT"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtEventName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="EVENT NAME"
            android:textStyle="bold"
            android:textSize="@dimen/login_signup_text_size"
            android:layout_above="@+id/txtPassword"
            android:background="@null"/>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap" />
        <EditText
            android:id="@+id/txtEventPlace"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="EVENT PLACE"
            android:textStyle="bold"
            android:textSize="@dimen/login_signup_text_size"
            android:layout_above="@+id/txtPassword"
            android:background="@null"/>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap" />


        <EditText
            android:id="@+id/txtEventDate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="EVENT DATE"
            android:textStyle="bold"
            android:textSize="@dimen/login_signup_text_size"
            android:layout_above="@+id/txtPassword"
            android:background="@null"/>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap" />


        <EditText
            android:id="@+id/txtEventTime"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="EVENT TIME"
            android:textStyle="bold"
            android:textSize="@dimen/login_signup_text_size"
            android:layout_above="@+id/txtPassword"
            android:background="@null"/>

        <Button
            android:id="@+id/btnAddEventOk"
            style="@style/Ok.Button.style"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/white_button_with_rounded_corner"
            android:text="OK"
            android:textColor="@color/white_button_text_color" />


    </LinearLayout>


</RelativeLayout>